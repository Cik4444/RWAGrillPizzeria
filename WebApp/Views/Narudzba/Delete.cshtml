@model WebApp.ViewModels.NarudzbaVM

@{
    ViewData["Title"] = "Obriši Narudžbu";
}

<div class="container mt-4">
    <h2 class="text-center">Obriši Narudžbu</h2>
    <hr />
    <div class="card">
        <div class="card-body">
            <p>Jeste li sigurni da želite obrisati ovu narudžbu?</p>
            <dl class="row">
                <dt class="col-sm-3">Datum:</dt>
                <dd class="col-sm-9">@Model.Datum.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-3">Korisnik:</dt>
                <dd class="col-sm-9">@Model.Korisnik?.Ime @Model.Korisnik?.Prezime</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Datum" />
                <button type="submit" class="btn btn-danger">Obriši</button>
                <a asp-action="Index" class="btn btn-secondary">Povratak</a>
            </form>
        </div>
    </div>
</div>

