@model IEnumerable<WebApp.ViewModels.NarudzbaVM>

@{
    ViewData["Title"] = "Narudžbe";
}

<div class="container mt-4">
    <h2 class="text-center">Popis Narudžbi</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Dodaj Narudžbu</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Korisnik</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var narudzba in Model)
            {
                <tr>
                    <td>@narudzba.Datum.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@narudzba.Korisnik?.Ime @narudzba.Korisnik?.Prezime</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@narudzba.Idnarudzba" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@narudzba.Idnarudzba" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@narudzba.Idnarudzba" class="btn btn-danger btn-sm" onclick="return confirm('Jeste li sigurni da želite obrisati ovu narudžbu?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
