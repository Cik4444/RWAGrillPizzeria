@model WebApp.ViewModels.KategorijaHraneVM

@{
    ViewData["Title"] = "Details - @Model.Naziv";
}

<div class="container mt-4">
    <h2>@Model.Naziv</h2>
    <p class="text-muted">@Model.Opis</p>

    <h4 class="mt-4">Povezana jela:</h4>
    @if (Model.Hranas != null && Model.Hranas.Any())
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Naslov</th>
                    <th>Opis</th>
                    <th>Cijena</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hrana in Model.Hranas)
                {
                    <tr>
                        <td>@hrana.Naslov</td>
                        <td>@hrana.Opis</td>
                        <td>@hrana.Cijena?.ToString("F2") kn</td>
                        <td>
                            <a asp-controller="Hrana" asp-action="Details" asp-route-id="@hrana.Idhrana" class="btn btn-info btn-sm">Detalji</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Nema povezanih jela za ovu kategoriju.</p>
    }

    <a asp-action="Index" asp-controller="KategorijaHrane" class="btn btn-secondary mt-3">Povratak na listu kategorija</a>
</div>
