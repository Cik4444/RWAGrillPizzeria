@model WebApp.ViewModels.HranaVM

@{
    ViewData["Title"] = "Detalji Hrane";
    var roleIdClaim = User.Claims.FirstOrDefault(c => c.Type == "RoleId")?.Value;
    int roleId = roleIdClaim != null ? int.Parse(roleIdClaim) : 0;
}

<div class="container mt-4">
    <h2 class="text-center">Detalji Hrane</h2>
    <hr />

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Hrana: @Model.Naslov</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Naslov:</dt>
                <dd class="col-sm-9">@Model.Naslov</dd>

                <dt class="col-sm-3">Opis:</dt>
                <dd class="col-sm-9">@Model.Opis</dd>

                <dt class="col-sm-3">Cijena:</dt>
                <dd class="col-sm-9">@Model.Cijena</dd>

                <dt class="col-sm-3">Kategorija:</dt>
                <dd class="col-sm-9">@Model.KategorijaHrane?.Naziv</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Povratak na izbornik hrane</a>
            @if (roleId == 1)
            {
                <a asp-action="Update" asp-route-id="@Model.Idhrana" class="btn btn-warning">Uredi</a>
            }
            
        </div>
    </div>
</div>
